{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@gh/core": ["libs/core/src/index.ts"],
      "@gh/api": ["libs/api/src/index.ts"],
      "@gh/ui": ["libs/ui/src/index.ts"],
      "@gh/pages": ["libs/pages/src/index.ts"],
      "@gh/common": ["libs/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
