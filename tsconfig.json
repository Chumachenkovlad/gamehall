{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@gamehall/core": [
        "libs/core/src/index.ts"
      ],
      "@gamehall/api": [
        "libs/api/src/index.ts"
      ],
      "@gamehall/ui": [
        "libs/ui/src/index.ts"
      ],
      "@gamehall/pages": [
        "libs/pages/src/index.ts"
      ],
      "@gamehall/common": [
        "libs/common/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
